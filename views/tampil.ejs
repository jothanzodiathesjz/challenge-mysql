<%- include('navbar') %>
<div class="container-fluid">
  <div class="row">
    <div class="col-6"><h1 class="text-dark">USERS</h1></div>
    <div class="col-6 d-flex justify-content-end"><a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a></div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-bordered bg-light">
          <thead class="thead-dark">
            <tr>
              <th scope="col">No</th>
              <th scope="col">First name</th>
              <th scope="col">Last name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
              <th scope="col">address</th>
            </tr>
          </thead>
          <tbody>
      
              <% pengguna.forEach(i => { %>
                
          
            <tr>
              <th class="number" scope="row"><%= i.id %></th>
              <td><%= i.first_name %></td>
              <td><%= i.last_name %></td>
              <td><%= i.email %></td>
              <td><%= i.phone %></td>
              <td><%= i.address %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
    </div>
    </div>
  </div>

  <%- include('footer') %>